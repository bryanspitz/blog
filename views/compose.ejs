<%- include("partials/header") -%>

<h1>Compose</h1>
<form method="post" action="/compose">
  <div class="form-group">
    <label class="form-label" for="postTitle">Title</label>
    <input class="form-control" id="postTitle" type="text" name="postTitle" autocomplete="off" autofocus />
  </div>
  <div class="form-group">
    <label class="form-label" for="postText">Post</label>
    <textarea class="form-control" rows="3" id="postText" name="postText"></textarea>
  </div>
  <button class="btn btn-primary" type="submit">Publish</button>
</form>

<%- include("partials/footer") -%>