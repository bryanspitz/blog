<%- include("partials/header") -%>

<h1>Home</h1>
<p><%= homeText %></p>

<% posts.forEach((post) => { %>
<h1><%= post.title %></h1>
<p>
  <%= post.body.slice(0, 100) %>
  <% if (post.body.length > 100) { %>
  &hellip;
  <% } %>
  <a href="/posts/<%= post.kebabTitle %>">Read More</a>
</p>
<% }); %>

<%- include("partials/footer") -%>